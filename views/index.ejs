<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <body>

    <header>
        <% include partials/header %>
    </header>

    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-7">
          <div class="container-fluid">
              <h2> <br> </h2>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <% if (images.length !== 1) {%>
                <% for(var i=0; i < images.length; i++) { %>
                  <% if (i == 0) { %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                  <%} else{ %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
                   <% } %>
                <% } %>
              <% } %>
              </ol>
              <div class="carousel-inner">
                <% for(var i=0; i < images.length; i++) { %>
                  <div class="carousel-item <%= images[i].active%>">
                    <!-- definitely for loop this guy... so we can make it extendable!!!-->
                    <img class="d-block w-100" src ='<%= images[i].path %>' alt="First slide">
                    <% if (images[i].topCaption) { %>
                      <div class="bg-light carousel-caption d-none d-md-block">
                        <h5><%= images[i].topCaption %></h5>
                        <p><%= images[i].bottomCaption %></p>
                      </div>
                    <%}%>
                  </div>
                <% } %>
              </div>
              <% if (images.length !== 1) {%>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              <%}%>
            </div>
            </div>
            </div>
            <div class="col-xs-5">
              <div class="container-fluid">
                <h2 class="text-center"> <br> Developer, Game Designer, and Web Programmer</h2>
                <p class="text-muted">I am a programmer, web designer, and game designer based in New York City. As a computer science student at NYU, I have strong technical skills in a variety of technologies and languages. My two minors in web design and game design allow me to take my strong technical background to fuel my creativity in creating engaging user experiences. Thank you for visiting my website.</p>
		<p>NOTE: WEBSITE STILL IN DEVELOPMENT. WILL BE UPDATED ~1 WEEK. </p>
              </div>
            </div>
          </div>
      </div>
    </main>

    <% include partials/footer %>

  </body>
</html>
